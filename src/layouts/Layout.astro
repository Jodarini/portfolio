---
import '../styles/global.css'

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-[var(--background)] text-[var(--text)] font-sans">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Rivas Benoit Full-stack Developer">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="m-0 min-h-screen relative overflow-x-hidden">
    <div class="spotlight fixed inset-0 pointer-events-none -z-10 bg-[radial-gradient(circle_at_50%_50%,rgba(245,194,231,0.05)_0%,transparent_50%)]"></div>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --background: #0e0e0e;
    --text: #d4d4d4;
    --accent: #c4a7e7;
    --secondary: #3e8fb0;
    font-family:
      "GeistMono",
      ui-monospace,
      SFMono-Regular,
      Roboto Mono,
      Menlo,
      Monaco,
      Liberation Mono,
      DejaVu Sans Mono,
      Courier New,
      monospace;

  }
</style>

