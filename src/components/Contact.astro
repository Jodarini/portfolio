<section class="contact text-center py-8">
  <h3 class="text-2xl text-[var(--secondary)] mb-4 font-bold">Get in Touch</h3>
  <p class="mb-6 text-[var(--text)]">I'm always open to new opportunities and collaborations.</p>
  
  <div class="buttons flex flex-col justify-center items-center">
    <button id="copyEmailBtn" class="contact-button flex items-center bg-[var(--accent)] text-[var(--background)] px-6 py-3 rounded-full font-bold transition-opacity duration-300 hover:opacity-90 max-w-max cursor-pointer border-none">
      <span class="mr-2">rivasjose9428@gmail.com</span>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" data-icon="SvgCopy" aria-hidden="true">
        <path d="M19 21H9.4a2 2 0 01-2-2V9.4a2 2 0 012-2H19a2 2 0 012 2V19a2 2 0 01-2 2zM7.3 16.6H5a2.006 2.006 0 01-2-2V5a2.008 2.008 0 012-2h9.6a2.006 2.006 0 012 2v2.3"></path>
      </svg>
    </button>
    <p id="copyStatus" class="copy-status h-[1.5em] mt-2 text-sm text-[var(--secondary)] opacity-0 transition-opacity duration-300"></p>
  </div>

  <div class="social-links mt-8">
    <a href="https://github.com/jodarini" target="_blank" rel="noopener noreferrer" class="text-[var(--text)] no-underline mx-2 transition-colors duration-300 hover:text-[var(--accent)]">GitHub</a>
    <a href="https://www.linkedin.com/in/rivas-benoit/" target="_blank" rel="noopener noreferrer" class="text-[var(--text)] no-underline mx-2 transition-colors duration-300 hover:text-[var(--accent)]">LinkedIn</a>
  </div>
</section>

<script>
  const copyEmailBtn = document.getElementById('copyEmailBtn');
  const copyStatus = document.getElementById('copyStatus');
  const email = 'rivasjose9428@gmail.com';

  copyEmailBtn?.addEventListener('click', () => {
    navigator.clipboard.writeText(email).then(() => {
      if (copyStatus) {
        copyStatus.textContent = 'Email copied to clipboard!';
        copyStatus.classList.replace('opacity-0', 'opacity-100');
        setTimeout(() => {
          copyStatus.classList.replace('opacity-100', 'opacity-0');
        }, 2000);
      }
    }).catch(err => {
      console.error('Failed to copy: ', err);
      if (copyStatus) {
        copyStatus.textContent = 'Failed to copy email.';
        copyStatus.classList.replace('opacity-0', 'opacity-100');
      }
    });
  });
</script>

