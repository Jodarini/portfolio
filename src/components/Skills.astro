---
import Badge from '../components/Badge.astro';


const frameworks = [
  "Vue 3",
  "Next.js",
  "React",
  "Tailwind CSS",
  "shadcn-vue"
]

const backend = [
"TypeScript",
"PostgreSQL",
"Drizzle ORM",
"Supabase (RLS)",
"Node.js & Nitro"
]

const state = [
"Pinia",
"Zustand",
"Docker",
"Vercel",
"Vitest"
]

const specialized = [
"Accessibility (ARIA)",
"Web Performance",
"Payment Integration",
"PHP & WordPress"
]

---

<section class="mb-16">
  <h3 class="text-2xl font-bold text-[var(--secondary)] mb-6">Expertise</h3>

  <div class="space-y-8">
    <!-- Frameworks & UI -->
    <div>
      <h4 class="text-xs uppercase tracking-widest text-gray-500 font-bold mb-3">Frameworks & UI</h4>
      <ul class="flex flex-wrap gap-3 p-0 list-none">
          {frameworks.map(framework => (
            <Badge title={framework} />
          ))}
      </ul>
    </div>

    <!-- Backend & Architecture -->
    <div>
      <h4 class="text-xs uppercase tracking-widest text-gray-500 font-bold mb-3">Backend & Database</h4>
      <ul class="flex flex-wrap gap-3 p-0 list-none">

          {backend.map(framework => (
            <Badge title={framework} />
          ))}
      </ul>
    </div>

    <!-- State & Tooling -->
    <div>
      <h4 class="text-xs uppercase tracking-widest text-gray-500 font-bold mb-3">Infrastructure & State</h4>
      <ul class="flex flex-wrap gap-3 p-0 list-none">
        {state.map(framework => (
        <Badge title={framework} />
        ))}
      </ul>
    </div>

    <!-- Specialized -->
    <div>
      <h4 class="text-xs uppercase tracking-widest text-gray-500 font-bold mb-3">Core & Specialized</h4>
      <ul class="flex flex-wrap gap-3 p-0 list-none">
        {specialized.map(framework => (
          <Badge title={framework} />
        ))}
      </ul>
    </div>
  </div>
</section>

