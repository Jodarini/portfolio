<section class="projects mb-16">
  <h3 class="text-2xl text-[var(--secondary)] mb-4 font-bold">Projects</h3>
  <div class="flex flex-col gap-4">
    {projects.map(project => (
    <div class="rounded-lg overflow-hidden border border-gray-200/10 p-4 flex flex-col gap-4">
        <img src={project.image} alt={`Preview of ${project.title}`} class="w-full object-cover rounded-lg" />
        <div class="project-content flex flex-col justify-between w-full md:w-4/5">
          <h4 class="text-[1.2rem] text-[var(--accent)] mb-2 mt-0 font-bold">{project.title}</h4>
          <p class="text-sm mb-4 leading-relaxed">{project.description}</p>
          
          <div class="flex flex-wrap gap-2 mb-4">
            {project.techStack.map(tech => (
              <span class="border border-gray-200/10 px-2 py-1 rounded-full text-[0.8rem]">
                {tech}
              </span>
            ))}
          </div>

          <div class="project-links flex justify-between">
            {project.link && 
              <a href={project.link} class="project-link inline-block text-[var(--secondary)] no-underline border-b border-[var(--secondary)] transition-opacity duration-300 hover:opacity-80 text-sm" target="_blank">
                View Project
              </a>
            }
            <a href={project.github} class="project-link inline-block text-[var(--secondary)] no-underline border-b border-[var(--secondary)] transition-opacity duration-300 hover:opacity-80 text-sm" target="_blank">
              Github
            </a>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>

