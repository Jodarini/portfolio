---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card group flex list-none p-[1px] bg-[#23262d] bg-[position:100%] bg-[length:400%] rounded-[7px] shadow-[inset_0_0_0_1px_rgba(255,255,255,0.1)] transition-[background-position] duration-600 ease-[cubic-bezier(0.22,1,0.36,1)] hover:bg-[image:var(--accent-gradient)] hover:bg-[position:0] focus-within:bg-[image:var(--accent-gradient)] focus-within:bg-[position:0]">
  <a 
    href={href} 
    class="w-full no-underline leading-[1.4] p-[calc(1.5rem-1px)] rounded-lg text-white bg-[#23262d] opacity-80"
  >
    <h2 class="m-0 text-xl transition-colors duration-600 ease-[cubic-bezier(0.22,1,0.36,1)] group-hover:text-[rgb(var(--accent-light))] group-focus-within:text-[rgb(var(--accent-light))]">
      {title}
      <span>&rarr;</span>
    </h2>
    <p class="mt-2 mb-0">
      {body}
    </p>
  </a>
</li>

